{
	"extends": "./../tsconfig.json",
	"ts-node": {
		"esm": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node"
	},
	"compilerOptions": {
		// Type-checking
		"noImplicitAny": false,

		// Modules
		"module": "CommonJS",
		"moduleResolution": "Node"
	},
	"include": ["src/**/*.ts"],
	"exclude": [".ts-node"]
}
