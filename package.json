{
	"name": "@diegofrayo/website",
	"version": "7.0.0",
	"private": true,
	"scripts": {
		"===== SETUP =====": "",
		"husky:install": "husky install ./.husky",
		"postinstall": "npm run styles:tw-plugins && npm run seo",
		"===== DEV =====": "",
		"dev": "npm-run-all --parallel build:env-file styles dev:next",
		"dev:next": "next dev",
		"build:ts": "tsc --noEmit",
		"build:env-file": "ts-node --project ./scripts/tsconfig.json scripts/src/scripts/env-file.ts",
		"===== PROD =====": "",
		"build": "next build",
		"start": "next start",
		"no-opt-install": "npm install --omit=optional --force",
		"===== FORMATTING =====": "",
		"lint": "eslint --ignore-path .gitignore --ext .js --ext .ts --ext .tsx --fix ./",
		"lint:no-warnings": "NO_LINT_WARNINGS=true npm run lint",
		"format": "prettier --write \"./**/*.{ts,tsx,json,css,mjs,js}\"",
		"===== SEO =====": "",
		"seo": "npm run seo:rss && npm run seo:sitemap",
		"seo:rss": "ts-node --project ./scripts/tsconfig.json scripts/src/scripts/rss.ts",
		"seo:sitemap": "ts-node --project ./scripts/tsconfig.json scripts/src/scripts/sitemap.ts",
		"===== STYLES =====": "",
		"styles": "npm run styles:css-vars && npm run styles:tw-plugins",
		"styles:css-vars": "ts-node --project ./scripts/tsconfig.json scripts/src/scripts/tailwind/css-vars.ts",
		"styles:tw-plugins": "ts-node --project ./scripts/tsconfig.json --emit --compilerHost scripts/src/scripts/tailwind/plugins.ts",
		"===== UTILS =====": "",
		"scripts:commit": "sh ./scripts/src/scripts/generic-commit.sh",
		"scripts:sync-shared-lib": "sh ./scripts/src/scripts/sync-shared-lib.sh",
		"scripts:code-stats": "tokei ./src",
		"scripts:code-complexity": "npx code-complexity . --filter \"./src/**/*.tsx\" --limit 10 --sort complexity"
	},
	"dependencies": {
		"@heroicons/react": "^2.0.18",
		"@radix-ui/react-hover-card": "^1.0.7",
		"@radix-ui/react-navigation-menu": "^1.1.3",
		"@radix-ui/react-popover": "^1.0.7",
		"@radix-ui/react-separator": "^1.0.3",
		"@radix-ui/react-tooltip": "^1.0.7",
		"@splitbee/web": "^0.3.0",
		"@types/crypto-js": "^4.1.3",
		"@types/node": "^20.5.9",
		"@types/react": "18.2.20",
		"@types/react-dom": "18.2.7",
		"auto-bind": "^5.0.1",
		"autoprefixer": "10.4.15",
		"axios": "^1.5.0",
		"class-variance-authority": "^0.7.0",
		"classnames": "^2.3.2",
		"crypto-js": "^4.2.0",
		"esbuild": "^0.19.3",
		"hoist-non-react-statics": "^3.3.2",
		"mdx-bundler": "^9.2.1",
		"next": "13.5.4",
		"next-pwa": "^5.6.0",
		"postcss": "8.4.31",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-error-boundary": "^4.0.11",
		"sonner": "^1.0.3",
		"sugar-high": "^0.5.2",
		"tailwindcss": "3.3.3",
		"typescript": "5.1.6",
		"valibot": "^0.19.0"
	},
	"devDependencies": {
		"@types/color-convert": "^2.0.1",
		"@types/hoist-non-react-statics": "^3.3.1",
		"color-convert": "^2.0.1",
		"feed": "^4.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.2",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"ts-node": "^10.9.1"
	},
	"optionalDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"envfile": "^6.18.0",
		"eslint": "^8.47.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-next": "^13.4.19",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-no-loops": "^0.3.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"husky": "^6.0.0"
	}
}
